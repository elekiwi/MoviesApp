<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MoviesAppPrometeo" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="AppTheme.TransparentActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Set the background of ActionBar to transparent -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/pink</item>

        <!-- If you're using AppBarLayouts or Toolbars, you can also set the status bar -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>